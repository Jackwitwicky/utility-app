<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity">

    <View
        android:id="@+id/splash_left_section"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/primary_line_logo" />

        <TextView
            android:id="@+id/splash_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_toRightOf="@id/splash_logo"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/splash_app_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_intro"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_alignLeft="@id/splash_app_name"
            android:layout_alignStart="@id/splash_app_name"
            android:layout_below="@id/splash_app_name"
            android:layout_marginTop="6dp"/>
    </RelativeLayout>


    <ImageView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_splash_bottom_line"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>